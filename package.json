{
    "name": "ts4-mod-manager",
    "version": "0.1.0",
    "description": "A GUI tool helps you organise your collection of mods and custom contents for game: The Sims 4.",
    "private": true,
    "main": "./dist-electron/index.js",
    "scripts": {
        "build": "vite build",
        "dev": "vite --host",
        "lint": "npm run lint:eslint && npm run lint:markdownlint && npm run lint:stylelint",
        "lint:eslint": "eslint . --ext .ts",
        "lint:markdownlint": "markdownlint *.md",
        "lint:stylelint": "stylelint ./src/**/*.{vue,css}",
        "prepare": "husky",
        "test": "vitest --run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/garrett-he/ts4-mod-manager.git"
    },
    "keywords": [
        "sims4",
        "mod",
        "custom-content",
        "game",
        "electron"
    ],
    "author": "Garrett HE <garrett.he@outlook.com>",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/garrett-he/ts4-mod-manager/issues"
    },
    "homepage": "https://github.com/garrett-he/ts4-mod-manager#readme",
    "dependencies": {
        "ant-design-vue": "^4.2.3",
        "electron-store": "^10.0.0",
        "extract-zip": "^2.0.1",
        "fs-extra": "^11.2.0",
        "glob": "^11.0.0",
        "markdown-it": "^14.1.0",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0",
        "vuex": "^4.1.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/test-utils": "^2.4.5",
        "electron": "^30.0.1",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "markdownlint-cli": "^0.39.0",
        "stylelint": "^16.3.1",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "^36.0.0",
        "typescript": "^5.4.4",
        "vite": "^5.2.8",
        "vite-plugin-electron": "^0.28.5",
        "vitest": "^1.5.0"
    }
}
